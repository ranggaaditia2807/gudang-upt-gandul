                    <i class="fas fa-plus-circle mr-2"></i> Tambah Barang
                </button>
                <button id="outgoingTab" class="tab-btn px-4 py-2 font-medium text-gray-700 hover:text-blue-600 focus:outline-none">
                    <i class="fas fa-truck-moving mr-2"></i> Pengeluaran
                </button>
            </div>
            <!-- Tambahkan tombol laporan -->
            <button id="reportTab" class="tab-btn px-4 py-2 font-medium text-gray-700 hover:text-blue-600 focus:outline-none">
                <i class="fas fa-file-alt mr-2"></i> Laporan Pengeluaran
            </button>
        </header>

        <!-- Main Content -->
        <main>
            <!-- Inventory Section -->
            <section id="inventorySection" class="p-6 bg-white rounded-lg shadow-sm">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-semibold text-gray-800">Daftar Persediaan Barang</h2>
                    <div class="relative">
                        <input type="text" id="searchInventory" placeholder="Cari barang..." class="pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                </div>
                
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kode</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nama Barang</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kategori</th>
