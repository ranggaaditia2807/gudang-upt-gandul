        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sample data
            let inventory = JSON.parse(localStorage.getItem('inventory')) || [];
            let outgoingRecords = JSON.parse(localStorage.getItem('outgoingRecords')) || [];
            
            // Tab switching
            const tabs = ['inventory', 'addItem', 'outgoing', 'report'];
            const tabButtons = tabs.map(tab => document.getElementById(`${tab}Tab`));
            const tabSections = tabs.map(tab => document.getElementById(`${tab}Section`));
            
            tabButtons.forEach((button, index) => {
                button.addEventListener('click', () => {
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabSections.forEach(section => section.classList.add('hidden'));
                    
                    button.classList.add('active');
                    tabSections[index].classList.remove('hidden');
                });
            });
            
            // Initialize navigation (activate inventory tab by default)
            document.getElementById('inventoryTab').click();
            
            // Render inventory table
            function renderInventory() {
                const tableBody = document.getElementById('inventoryTableBody');
                tableBody.innerHTML = '';
                
                if (inventory.length === 0) {
                    const emptyRow = document.createElement('tr');
                    emptyRow.innerHTML = `
                        <td colspan="7" class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                            Tidak ada data persediaan. Tambahkan barang terlebih dahulu.
                        </td>
                    `;
                    tableBody.appendChild(emptyRow);
                    return;
                }
                
                inventory.forEach((item, index) => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${item.code}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${item.name}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${item.category || '-'}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 ${item.stock < 10 ? 'text-red-600 font-bold' : ''}">${item.stock}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${item.unit}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${item.location || '-'}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <button class="text-red-600 hover:text-red-900 delete-btn" data-id="${item.code}">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    `;
                    tableBody.appendChild(row);
                });
                
                // Add event listeners to delete buttons
                document.querySelectorAll('.delete-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const itemCode = this.getAttribute('data-id');
                        if (confirm(`Yakin ingin menghapus barang ${item.name} (${itemCode})?`)) {
                            inventory = inventory.filter(item => item.code !== itemCode);
                            saveInventory();
                            renderInventory();
                        }
                    });
                });
            }
            
            // Add item form
            document.getElementById('addItemForm').addEventListener('submit', function(e) {
                if (e.key === 'Enter' && e.target.tagName !== 'BUTTON') {
                    e.preventDefault(); 
                    return false;
                }
                
                // Validasi input
                if (!document.getElementById('itemCode').value || 
                    !document.getElementById('itemName').value ||
                    !document.getElementById('itemUnit').value ||
                    !document.getElementById('itemStock').value) {
                    alert('Mohon isi semua field yang wajib diisi!');
                    return;
                }

                const newItem = {
                    code: document.getElementById('itemCode').value,
                    name: document.getElementById('itemName').value,
                    category: document.getElementById('itemCategory').value,
                    unit: document.getElementById('itemUnit').value,
                    stock: parseInt(document.getElementById('itemStock').value),
                    location: document.getElementById('itemLocation').value,
                    notes: document.getElementById('itemNotes').value
                };
                
                // Check if item code already exists
                const existingItem = inventory.find(item => item.code === newItem.code);
                if (existingItem) {
                    alert('Kode barang sudah ada! Gunakan kode yang berbeda.');
                    return;
                }
                
                inventory.push(newItem);
                saveInventory();
                
                // Reset form and show success message
                this.reset();
                alert('Barang berhasil ditambahkan!');
                
                // Refresh inventory table
                renderInventory();
                // Switch to inventory tab
                document.getElementById('inventoryTab').click();
            });
            
            // Outgoing form
            function populateItemDropdown() {
                const dropdown = document.getElementById('outgoingItem');
                dropdown.innerHTML = '<option value="">Pilih Barang</option>';
                
                inventory.forEach(item => {
                    const option = document.createElement('option');
                    option.value = item.code;
                    option.textContent = `${item.code} - ${item.name} (Stok: ${item.stock} ${item.unit})`;
                    dropdown.appendChild(option);
                });
            }
            
            document.getElementById('outgoingForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const selectedItemCode = document.getElementById('outgoingItem').value;
                const quantity = parseInt(document.getElementById('outgoingQuantity').value);
                const date = document.getElementById('outgoingDate').value;
                
                // Find the item in inventory
                const itemIndex = inventory.findIndex(item => item.code === selectedItemCode);
                if (itemIndex === -1) {
                    alert('Barang tidak ditemukan!');
                    return;
                }
                
                // Check stock
                if (inventory[itemIndex].stock < quantity) {
                    alert(`Stok tidak mencukupi! Stok tersedia: ${inventory[itemIndex].stock}`);
                    return;
                }
                
                // Reduce stock
                inventory[itemIndex].stock -= quantity;
                
                // Create outgoing record
                const record = {
                    itemCode: selectedItemCode,
                    itemName: inventory[itemIndex].name,
                    quantity: quantity,
                    date: date,
                    recipient: document.getElementById('outgoingRecipient').value,
                    department: document.getElementById('outgoingDepartment').value,
                    purpose: document.getElementById('outgoingPurpose').value,
                    timestamp: new Date().toISOString()
                };
                
                outgoingRecords.push(record);
                saveInventory();
                localStorage.setItem('outgoingRecords', JSON.stringify(outgoingRecords));
                
                // Reset form and show success message
                this.reset();
                alert('Pengeluaran berhasil dicatat!');
                
                // Refresh inventory table
                renderInventory();
            });
            
            // Inventory search
            document.getElementById('searchInventory').addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('#inventoryTableBody tr');
                
                rows.forEach(row => {
                    const cells = row.querySelectorAll('td');
                    const itemCode = cells[0].textContent.toLowerCase();
                    const itemName = cells[1].textContent.toLowerCase();
                    
                    if (itemName.includes(searchTerm) || itemCode.includes(searchTerm)) {
                        row.style.removeProperty('display');
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
            
            // Helper functions
            function saveInventory() {
                localStorage.setItem('inventory', JSON.stringify(inventory));
            }
            
            // Initialize UI
            renderInventory();
            populateItemDropdown();
            
            // Add report tab functionality
            document.getElementById('reportTab').addEventListener('click', function() {
                // Set default dates
                const today = new Date().toISOString().split('T')[0];
                document.getElementById('reportFromDate').value = today;
                document.getElementById('reportToDate').value = today;
                generateReport();
            });
            
            // Generate report function
            function generateReport() {
                const fromDate = document.getElementById('reportFromDate').value;
                const toDate = document.getElementById('reportToDate').value;
                
                const filteredRecords = outgoingRecords.filter(record => {
                    return record.date >= fromDate && record.date <= toDate;
                });
                
                const reportBody = document.getElementById('reportTableBody');
                reportBody.innerHTML = '';
                
                if (filteredRecords.length === 0) {
                    const emptyRow = document.createElement('tr');
                    emptyRow.innerHTML = `
                        <td colspan="6" class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                            Tidak ada data pengeluaran untuk periode ini.
                        </td>
                    `;
                    reportBody.appendChild(emptyRow);
                    return;
                }
                
                filteredRecords.forEach(record => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${record.date}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${record.itemCode}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${record.itemName}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${record.quantity}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${record.recipient || '-'}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${record.purpose || '-'}</td>
                    `;
                    reportBody.appendChild(row);
                });
            }
            
            // Add event listener for generate report button
            document.getElementById('generateReportBtn').addEventListener('click', generateReport);
        });
    </script>

    <style>
        .tab-btn.active {
            color: #2563eb;
            border-bottom: 2px solid #2563eb;
        }
    </style>
</body>
</html>
